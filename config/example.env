# Network
NETWORK=phonchain-mainnet

# Server (INTERNAL bind - behind nginx for gateway nodes)
HOST=127.0.0.1
PORT=5000

# Public endpoints (docs only)
EXPLORER_URL=https://explorer.phonchain.org

# Bootstrap peers (official DNS)
BOOTSTRAP_NODES=https://api.phonchain.org,https://seed.phonchain.org

# Optional internal protected endpoint (leave empty to disable)
INTERNAL_TX_KEY=

# Production
FLASK_ENV=production
PYTHONUNBUFFERED=1
